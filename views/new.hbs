<div class='container mt-3 border border-success border-4'>
  <form class='m-3' action='/restaurants' method='POST'>
    <div class='form-group'>
      <label for='name' class='form-label'>餐廳名稱</label>
      <input
        type='text'
        class='form-control'
        id='name'
        name='name'
        required
        oninvalid="Swal.fire('請輸入餐廳名稱！')"
        value='{{restaurant.name}}'
        placeholder='餐廳名稱 ...'
      />
    </div>
    <div class='mb-3'>
      <label for='name_en' class='form-label'>餐廳英文名稱</label>
      <input
        type='text'
        class='form-control'
        id='name_en'
        name='name_en'
        value='{{restaurant.name_en}}'
      />
    </div>
    <div class='mb-3'>
      <label for='category' class='form-label'>餐廳類型</label>
      <input
        type='text'
        class='form-control'
        id='category'
        list='categoryList'
        name='category'
        required
        oninvalid="Swal.fire('請輸入餐廳類型！')"
        value='{{restaurant.category}}'
      />
      <datalist id='categoryList'>
        <option>中東料理</option>
        <option>義式餐廳</option>
        <option>日本料理</option>
        <option>咖啡</option>
        <option>酒吧</option>
      </datalist>
    </div>
    <div class='mb-3'>
      <label for='location' class='form-label'>地址</label>
      <input
        type='text'
        class='form-control'
        id='location'
        name='location'
        required
        oninvalid="Swal.fire('請輸入餐廳地址！')"
        value='{{restaurant.location}}'
      />
    </div>
    <div class='mb-3'>
      <label for='phone' class='form-label'>電話</label>
      <input
        type='text'
        class='form-control'
        id='phone'
        name='phone'
        required
        oninvalid="Swal.fire('請輸入餐廳電話！')"
        value='{{restaurant.phone}}'
      />
    </div>
    <div class='mb-3'>
      <label for='google_map' class='form-label'>google地圖</label>
      <input
        type='text'
        class='form-control'
        id='google_map'
        name='google_map'
        required
        placeholder='Google map'
        oninvalid="Swal.fire('請輸入餐廳 Google 網址！')"
        value='{{restaurant.google_map}}'
      />
    </div>
    <div class='mb-3'>
      <label for='image' class='form-label'>餐廳圖片URL</label>
      <input
        type='text'
        class='form-control'
        id='image'
        name='image'
        required
        placeholder='http://圖片地址...'
        oninvalid="Swal.fire('請輸入餐廳圖片網址！')"
        value='{{restaurant.image}}'
      />
    </div>
    <div class='mb-3'>
      <label for='rating' class='form-label'>評價</label>
      <input
        type='number'
        class='form-control'
        id='rating'
        name='rating'
        min='1.0'
        max='5.0'
        step='0.1'
        required
        oninvalid="Swal.fire('請輸入餐廳評價！')"
        placeholder='1.0~5.0'
        value='{{restaurant.rating}}'
      />
    </div>
    <div class='mb-3'>
      <label for='description'>餐廳介紹</label>
      <textarea
        class='form-control'
        placeholder='簡介餐廳'
        name='description'
        id='description'
        cols='30'
        rows='7'
        required
        oninvalid="Swal.fire('請輸入餐廳介紹！')"
      >{{restaurant.description}}</textarea>
    </div>
    <button type='submit' class='btn btn-primary'>確認</button>
    <a href='/'><button type='button' class='btn btn-primary'>返回</button></a>
  </form>
</div>